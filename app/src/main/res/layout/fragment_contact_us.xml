<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs6392016.gbergy.stooperapp.ContactUs">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gregbtn"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_greg" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tonybtn"
        android:layout_below="@+id/gregbtn"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_tony" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jonesbtn"
        android:src="@drawable/ic_jones"
        android:layout_below="@+id/tonybtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Greg Goldberg"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/gregbtn"
        android:layout_toEndOf="@+id/gregbtn"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tony Chen"
        android:id="@+id/textView11"
        android:layout_above="@+id/jonesbtn"
        android:layout_alignTop="@+id/tonybtn"
        android:layout_alignEnd="@+id/textView10"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tonybtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rawle Jones"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/jonesbtn"
        android:layout_below="@+id/tonybtn"
        android:layout_alignEnd="@+id/textView11"
        android:layout_toEndOf="@+id/tonybtn"
        android:gravity="center_vertical" />
</RelativeLayout>
